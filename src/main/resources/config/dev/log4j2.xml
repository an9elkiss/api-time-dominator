<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="1800">    
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss Z} %-5level %t \(%F:%L\) %method\(\) - %m%n" />
        </Console>       
        
        <RollingFile name="RollingFile" fileName="D:\\baozun\\project-A9KS\\logs\\api-time-dominator.log" filePattern="D:\\baozun\\project-A9KS\\logs\\api-time-dominator-%d{yyyy-MM-dd}.log">  
		    <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss Z} %-5level %t \(%F:%L\) %method\(\) - %m%n"/>  
		    <Policies>  
		        <TimeBasedTriggeringPolicy modulate="true" interval="1"/>  
		    </Policies>  
		</RollingFile> 
    </Appenders>

    <Loggers>      
    	<logger name="org.apache.ibatis" level="trace" additivity="true">
        	<appender-ref ref="Console"/>
        </logger>
        
        <logger name="com.an9elkiss.api.timedo.api" level="debug" additivity="true">
        	<appender-ref ref="Console"/>
        </logger>
          
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
    </Loggers>
</Configuration>